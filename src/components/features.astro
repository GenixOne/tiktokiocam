---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

---

<div class="relative p-4">
    <div class="max-w-7xl mx-auto">
		<h2 class="mt-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">{t("features.subtitle")}</h2>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-white"> <a href="https://tiktokio.cam" class="font-medium text-orange-400 dark:text-orange-400 hover:underline">{t("hero.tiktokio")}</a> {t("features.titlepg")}</p>
	
		<h2 class="mt-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">{t("features.title_mp3_down")}</h2>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-white">{t("features.tiktok_mp3_text1")} <a href="/tiktok-mp3" class="font-medium text-orange-400 dark:text-orange-400 hover:underline">{t("features.title_mp3_downloader")}</a> {t("features.tiktok_mp3_text2")}</p>
	
<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<h2 class="text-base font-semibold leading-7 text-black dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
		</p>
	</div>



	</div>
	
</div>
